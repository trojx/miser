<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/iv_icon"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/al_mastername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="1"
            android:textSize="25px"
            android:text="mastername"/>

        <TextView
            android:id="@+id/al_shaersname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:maxLines="1"
            android:textSize="40px"
            android:text="sharesname"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/textview_greystyle"
                android:id="@+id/al_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:maxLines="1"
                android:text="time"/>
            <TextView
                android:id="@+id/al_jg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:maxLines="1"
                android:text="jg"/>
            <TextView
                android:background="@drawable/textview_redstyle"
                android:id="@+id/al_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:maxLines="1"
                android:text="type"/>
            <TextView
                android:id="@+id/al_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:maxLines="1"
                android:text="number"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>